@using FootballTracker.Services
@inject TabellenService TabellenService
@inject AppStateService AppStateService

    <MudPaper Class="pa-6">
        <MudText Typo="Typo.h4" Class="mb-4 font-weight-bold">Tabelle
        </MudText>

        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <MudTable Items="_teams" Dense="true" Hover="true" Bordered="true" Striped="true" >
                <HeaderContent>
                    <MudTh Style="white-space: nowrap">Platz</MudTh>
                    <MudTh Style="white-space: nowrap">Team</MudTh>
                    <MudTh Style="white-space: nowrap">Diff</MudTh>
                    <MudTh Style="white-space: nowrap">Punkte</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Platz">@context.TabellenPlatz</MudTd>
                    <MudTd DataLabel="Team">
                        <MudImage Height="20" Width="20" Class="mr-2" Src="@context.LogoUrl" Style="object-fit: contain" />
                        @context.ShortName
                    </MudTd>
                    <MudTd DataLabel="Diff">@context.Differenz</MudTd>
                    <MudTd DataLabel="Punkte" Class="font-weight-bold">
                        @context.Punkte
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudHidden>
        
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudTable Items="_teams" Dense="true" Hover="true" Bordered="true" Striped="true" Class="fixed-table" >
                <HeaderContent>
                    <MudTh Style="white-space: nowrap">Pl.</MudTh>
                    <MudTh Style="white-space: nowrap">Team</MudTh>
                    <MudTh Style="white-space: nowrap">Diff</MudTh>
                    <MudTh Style="white-space: nowrap">Punkte</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Platz">@context.TabellenPlatz</MudTd>
                    <MudTd DataLabel="Team">
                        <MudImage Height="20" Width="20" Class="mr-2" Src="@context.LogoUrl" Style="object-fit: contain" />
                        @context.ShortName
                    </MudTd>
                    <MudTd DataLabel="Diff">@context.Differenz</MudTd>
                    <MudTd DataLabel="Punkte" Class="font-weight-bold">
                        @context.Punkte
                    </MudTd>
                </RowTemplate>
            </MudTable>
        </MudHidden>
    </MudPaper>    
