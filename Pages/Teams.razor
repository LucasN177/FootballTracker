@page "/Teams"
<MudPaper Class="pa-6 mt-4">
    <MudText Typo="Typo.h4" Class="mt-2 mb-4 font-weight-bold" Style="margin-top: 30px">
        Teams @AppStateService.SelectedSeason.Name
    </MudText>
    <MudDivider/>
    <MudGrid Justify="Justify.Center">
        @foreach (var team in _teams)
        {
            <MudItem>
                <NavLink href="@($"TeamDetailsPage/{team.Id}")">
                    <MudPaper MinWidth="200px" MinHeight="150px" Outlined="true" Elevation="2" Style="background: #fcfcfd">
                        <MudStack AlignItems="AlignItems.Center" Class="mt-4">
                            <MudImage Height="80" Width="80" Src="@team.LogoUrl"/>
                            <MudText>@team.Name</MudText>
                        </MudStack>
                    </MudPaper>
                </NavLink>
            </MudItem>
        }
    </MudGrid>
</MudPaper>
